{% extends 'base.html.twig' %}

{% block title 'Connexion' %}

{% block body %}
    <style>body {
            background-color: #FDFAF0 !important;
        }</style>
    <div class="d-flex flex-column flex-column-fluid flex-lg-row">
        <div class="d-flex flex-center w-lg-50 pt-15 pt-lg-0 px-10">
            <div class="d-flex flex-center flex-lg-start flex-column">
                <a href="#" class="mb-7">
                    <img alt="Logo" src="{{ asset('media/logos/logo-black.svg') }}"/>
                </a>
                <h2 class="text-black-50 fw-normal m-0">Un pas vers l'excellence</h2>
            </div>
        </div>
        <div class="d-flex flex-column-fluid flex-lg-row-auto justify-content-center justify-content-lg-end p-12 p-lg-20">
            <div class="bg-body d-flex flex-column align-items-stretch flex-center rounded-4 w-md-600px p-20">
                <div class="d-flex flex-center flex-column flex-column-fluid px-lg-10 pb-15 pb-lg-20">
                    <form class="form w-100" action="{{ path('auth_login') }}" method="POST">
                        <div class="text-center mb-11">
                            <h1 class="text-dark fw-bolder mb-3">Connexion</h1>
                        </div>
                        <div class="row g-3 mb-9">
                            <div class="col-md-6">
                                <a href="#"
                                   class="btn btn-flex btn-outline btn-text-gray-700 btn-active-color-primary bg-state-light flex-center text-nowrap w-100">
                                    <img alt="Logo" src="{{ asset('media/svg/brand-logos/google-icon.svg') }}"
                                         class="h-15px me-3"/>Connexion Google</a>
                            </div>
                            <div class="col-md-6">
                                <a href="#"
                                   class="btn btn-flex btn-outline btn-text-gray-700 btn-active-color-primary bg-state-light flex-center text-nowrap w-100">
                                    <img alt="Logo" src="{{ asset('media/svg/brand-logos/apple-black.svg') }}"
                                         class="theme-light-show h-15px me-3"/>
                                    <img alt="Logo" src="{{ asset('media/svg/brand-logos/apple-black-dark.svg') }}"
                                         class="theme-dark-show h-15px me-3"/>Connexion Apple</a>
                            </div>
                        </div>
                        <div class="separator separator-content my-14">
                            <span class="w-125px text-gray-500 fw-semibold fs-7">par email</span>
                        </div>
                        {% for label, messages in app.flashes %}
                            {% for message in messages %}
                                <div class="alert alert-{{ label }} d-flex align-items-center p-5">
                                    <div class="d-flex flex-column">
                                        <span>{{ message }}</span>
                                    </div>
                                </div>
                            {% endfor %}
                        {% endfor %}
                        {% if error %}
                            <div class="alert alert-danger d-flex align-items-center p-5">
                                <div class="d-flex flex-column">
                                    <span>{{ error.messageKey | trans(error.messageData, 'security') }}</span>
                                </div>
                            </div>
                        {% endif %}
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                        <div class="fv-row mb-8">
                            <input type="text" placeholder="Email" id="username" name="_username"
                                   class="form-control bg-transparent" value="{{ last_username }}"/>
                        </div>
                        <div class="fv-row mb-3">
                            <input type="password" placeholder="Mot de passe" id="password" name="_password"
                                   class="form-control"/>
                        </div>
                        <div class="d-flex flex-stack flex-wrap gap-3 fs-base fw-semibold mb-8">
                            <div></div>
                            <a href="#" class="link-warning">Mot de passe oublié ?</a>
                        </div>
                        <div class="d-grid mb-10">
                            <button type="submit" class="btn btn-warning">
                                <span class="indicator-label">Sign In</span>
                                <span class="indicator-progress">Please wait...<span
                                            class="spinner-border spinner-border-sm align-middle ms-2"></span></span>
                            </button>
                        </div>
                        <div class="text-gray-500 text-center fw-semibold fs-6">Pas encore membre ?
                            <a href="{{ path('auth_register') }}" class="link-warning">Inscription</a></div>
                    </form>
                </div>
                <div class="d-flex flex-stack px-lg-10">
                    <div class="d-flex fw-semibold text-warning fs-base gap-5">
                        <a href="https://www.stayfocusedandco.fr/politique-de-confidentialite" target="_blank"
                           class="text-warning">Confidentialité</a>
                        <a href="https://www.stayfocusedandco.fr/cgs" target="_blank" class="text-warning">CGS</a>
                        <a href="https://www.stayfocusedandco.fr/mentions-legales" target="_blank" class="text-warning">Mentions
                            Légales</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
